<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/crv_detail"
    android:background="@color/colorPrimaryDark"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Product"
            android:textAlignment="gravity"
            android:textSize="@dimen/tam_letter_song" />

        <TextView
            android:id="@+id/txv_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txv_product"
            android:text="Purchase"
            android:textAlignment="gravity"
            android:textSize="@dimen/tam_letter_song" />

        <TextView
            android:id="@+id/txv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txv_artist"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txv_artist"
            android:layout_below="@id/txv_purchase"
            android:text="Quantity"
            android:textSize="@dimen/tam_letter_song"
            android:textAlignment="gravity"/>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txv_quantity"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/folder" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_edit"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:src="@drawable/delete" />

    </RelativeLayout>
</android.support.v7.widget.CardView>